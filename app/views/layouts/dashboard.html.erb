                    <div class="nav">
                        <div>
                            <div class="sb-sidenav-menu-heading"><span>Site Web</span></div>
                            <%= link_to pictures_path, class: "nav-link active"  do %>
                            
                                <div class="sb-nav-link-icon">
                                  <i class="fa fa-dashboard"></i>
                                </div>
                                <span>Images</span>
                            
                            <% end %>
                            <%= link_to products_path, class: "nav-link active"  do %>
                            
                                <div class="sb-nav-link-icon">
                                  <i class="fa fa-dashboard"></i>
                                </div>
                                <span>Products</span>
                            
                            <% end %>
                        </div>
